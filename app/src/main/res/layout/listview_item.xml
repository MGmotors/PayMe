<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:background="@color/colorListItemsBackground"
    android:padding="@dimen/pm_padding">

    <TextView
        android:id="@+id/pmHistoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/pmHistoryDate"
        android:layout_toStartOf="@+id/pmHistoryDate"
        android:singleLine="true"
        android:text="Titel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pmHistoryDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pmHistoryTitle"
        android:layout_alignRight="@+id/pmHistoryTitle"
        android:layout_below="@+id/pmHistoryTitle"
        android:text="Einkauf Donnerstag: Shampoo, usw lkj  alksjdf alksjdf alksdjf alksj dfoiwwe todfjgÃ¶lkajsd f"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/pmHistoryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="top|end"
        android:minWidth="80dp"
        android:singleLine="true"
        android:text="13:23 - 20.11.29"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/pmHistoryPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pmHistoryDescription"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="bottom|end"
        android:minWidth="80dp"
        android:singleLine="true"
        android:text="50"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorSecondaryText" />

</RelativeLayout>
